
@{
    ViewBag.Title = "stuff";
    String itemName = "Mac and Cheese";
    double price = 1.5;
    int qty = ViewBag.qty == null ? 0 : ViewBag.qty;
    var totalprice = price * qty;
}

<h2>stuff</h2>

<div class="panel panel-info">
    <div class="panel-heading">
        <h3>Your order detials:</h3>
    </div>
    <div class="panel-body">
        <h3>    Name:     @itemName</h3>
        <h4>   Price:    @price.ToString("C") </h4>
        <h4>Quantity: @qty</h4>
        <h4>   Total:    @totalprice.ToString("C")</h4>
    </div>
</div>