
@{
    ViewBag.Title = "addnumbers";
}

<h2>@ViewBag.total</h2>

<form role="form" method="post" action="~/Hello/addnumbers">
    <div class="form-group">

        <label for="num1">First Number</label>
        <input type="text" class="form-control" id="num1" name="num1" />

    </div>

    <div class="form-group">

        @Html.Label("Second Number")
        @Html.TextBox("num2", null, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Click Me</button>

</form>


